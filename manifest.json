{
    "manifest_version": 1,
    "name": "Auto Reload",
    "description": "An extension for auto click on selector in the HTML page",
    "version": "1.0",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png" 
    },
    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
}